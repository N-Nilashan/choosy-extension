{
  "manifest_version": 3,
  "name": "Choosy AI",
  "version": "1.0",
  "description": "AI-powered comment generator for LinkedIn & Twitter",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [{
    "matches": [
      "https://www.linkedin.com/*",
      "https://twitter.com/*",
      "https://x.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_end",
    "all_frames": true
  }],
  "permissions": ["storage"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "options_page": "options/options.html"
}
