{
  "manifest_version": 3,
  "name": "ChoosyAI",
  "version": "1.0",
  "description": "AI-powered comment generator for LinkedIn and Twitter/X",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://*.linkedin.com/*", "*://*.twitter.com/*", "*://*.x.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*", "*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options/options.html",
  "action": {
    "default_popup": "options/options.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
