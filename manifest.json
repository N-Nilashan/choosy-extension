{
  "manifest_version": 3,
  "name": "Social Media Comment Generator",
  "version": "1.0.0",
  "description": "Generate comments for LinkedIn and Twitter/X posts with AI.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*", "*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
